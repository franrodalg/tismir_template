\def\maketitle{\par
  \begingroup
  \def\thefootnote{}
  \def\@makefnmark{
    \hbox
    {$^{\@thefnmark}$\hss}
  }
  \twocolumn[\@maketitle]
  \@thanks
  \endgroup
  \setcounter{footnote}{0}
  \let\maketitle\relax
  \let\@maketitle\relax
  \gdef\thefootnote{
  \arabic{footnote}
  }
  \gdef\@author{}
  \gdef\@articletype{}
  \gdef\@title{}
  \gdef\@theabstract{}
  \let\thanks\relax
}

\def\@maketitle{
  \newpage
  \null
  \vspace{5.0em}
  \@articletype
  \vspace{1.0em}
  \begin{center}{
    \Large \bf \uppercase \@title \par
  }
  \vskip 2.0em {
    \large \lineskip .5em
    \begin{tabular}[t]{c}
    \@author \\
    \end{tabular}
    \par
  }
  \end{center}
  \par
  \vspace{1.0em}
  
  \@theabstract
  
  \vspace{1.0em}
}

\def\articletype#1{
  \gdef\@articletype{
  \textbf{\MakeUppercase{\Large [#1]}}  \par}
}

\def\theabstract#1{
  \gdef\@theabstract{
    \@abstracttitle%
    #1
    \hfill \\ \par
  }
}

\def\@abstracttitle{\large \textbf{Abstract} \\}

