\def\multauthor#1#2{
  \gdef\@author{
  \begin{tabular}{@{}c@{}}
    {\bf #1} \\
    #2\relax
   \end{tabular}%\hskip .3in
  }
}

\def\oneauthor#1#2{
  \gdef\@author{
  \begin{tabular}{@{}c@{}}
    {\bf #1} \\
    #2\relax
   \end{tabular}%\hskip .3in
  }
  \def\authorname{#1}
}

\def\twoauthors#1#2#3#4{
  \gdef\@author{
    \makebox[\textwidth]{%
      \hfill
      \begin{tabular}{@{}c@{}}
        {\bf #1} \\
        #2
      \end{tabular}
      \hfill
      \begin{tabular}{@{}c@{}}
        {\bf #3} \\
        #4\relax
      \end{tabular}
      \hfill
    }
  }
  \def\authorname{#1, #3}
}

\def\threeauthors#1#2#3#4#5#6{
  \gdef\@author{
    \makebox[\textwidth]{%
      \hfill
      \begin{tabular}{@{}c@{}}
        {\bf #1} \\
        #2
      \end{tabular}
      \hfill
      \begin{tabular}{@{}c@{}}
        {\bf #3} \\
        #4
      \end{tabular}
      \hfill
      \begin{tabular}{@{}c@{}}
        {\bf #5} \\
        #6\relax
      \end{tabular}
      \hfill
    }
  }
  \def\authorname{#1, #3, #5}
}


\def\fourauthors#1#2#3#4#5#6#7#8{
  \gdef\@author{
    \makebox[\textwidth]{%
      \hfill
      \begin{tabular}{@{}c@{}}
        {\bf #1} \\
        #2
      \end{tabular}
      \hfill
      \begin{tabular}{@{}c@{}}
        {\bf #3} \\
        #4
      \end{tabular}
      \hfill
      \begin{tabular}{@{}c@{}}
        {\bf #5} \\
        #6
      \end{tabular}
      \hfill
      \begin{tabular}{@{}c@{}}
        {\bf #7} \\
        #8\relax
      \end{tabular}
      \hfill
    }
  }
  \def\authorname{#1, #3, #5, #7}
}

